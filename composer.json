{
    "name": "juanchosl/validators",
    "description": "Little methods collection in order to validate variables contents",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/JuanchoSL/Validators",
    "minimum-stability": "stable",
    "keywords": [
        "log",
        "debug"
    ],
    "authors": [
        {
            "name": "Juan SÃ¡nchez Lecegui",
            "email": "JuanchoSL@hotmail.com",
            "homepage": "https://github.com/JuanchoSL/"
        }
    ],
    "require": {
        "php": "^7.1 || ^8.0",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "1.10.*",
        "phpunit/phpunit": "9.6.*"
    },
    "autoload": {
        "psr-4": {
            "JuanchoSL\\Validators\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JuanchoSL\\Validators\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "vendor/bin/phpunit --configuration phpunit.xml tests",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon"
    }
}